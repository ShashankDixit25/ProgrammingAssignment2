  x = matrix()
a <- function(x) {
  
  set_fun <- function(y) {
    x <<- y
    
  }
  get_fun <- function() x
  
  
  list(set = set_fun,
       get = get_fun)
}

b <- function(x, ...) {
  
  
  c <- x$get()
  i <- solve(c, ...)
  
  i
}



B <- matrix(c(1,2,3,4),2,2)
solve(B)




B1 <- a(B)
b(B1)
b(B1)%*%B


solve(B)
     [,1] [,2]
[1,]   -2  1.5
[2,]    1 -0.5
